# 가상환경 폴더 (루트 또는 back-end 디렉토리 내 위치)
/.venv/
/back-end/.venv/

# 민감한 정보를 담는 환경변수 파일
/back-end/.env

# Python 캐시 파일 및 컴파일된 파일
# 이 규칙들은 하위 디렉토리까지 모두 적용됩니다.
__pycache__/
*.pyc
*.pyo
*.pyd

# 패키지 빌드 및 배포 폴더
/back-end/build/
/back-end/dist/
/back-end/*.egg-info/
/back-end/*.egg

# 테스트 관련 파일
/back-end/.pytest_cache/
/back-end/.coverage
/back-end/htmlcov/


# ---------------------------------
# React (front-end 폴더)
# ---------------------------------

# 의존성 라이브러리 폴더 (매우 중요!)
/front-end/node_modules/

# 빌드 결과물
/front-end/build/
/front-end/dist/

# 민감 정보를 담는 환경변수 파일 (매우 중요!)
/front-end/.env
/front-end/.env.local
/front-end/.env.development
/front-end/.env.test
/front-end/.env.production

# 로그 및 디버그 파일
/front-end/npm-debug.log*
/front-end/yarn-debug.log*
/front-end/yarn-error.log*

# 테스트 커버리지 폴더
/front-end/coverage/


